generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String?  // nullable for Google users
  googleId  String?  @unique
  role      String
  createdAt DateTime @default(now())
}
